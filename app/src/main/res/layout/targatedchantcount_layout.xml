<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp" app:srcCompat="@drawable/chant"
                android:id="@+id/imageView2" android:layout_margin="0dp"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:orientation="horizontal">
                <TextView
                        android:text="Today's"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/tvTodays" android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:orientation="horizontal">
                <TextView
                        android:text="Total Chanted Rounds On App  :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:id="@+id/tvRounds" android:textSize="18dp" android:textAlignment="viewEnd"/>
                <TextView
                        android:text="1000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvRoundCount"
                        android:textSize="25sp"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimary" android:textAlignment="textStart"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:orientation="horizontal">
                <TextView
                        android:text="Total Target Rounds :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:id="@+id/tvTargetRounds"
                        android:layout_gravity="end"
                        android:textSize="18sp" android:textAlignment="viewEnd"/>
                <TextView
                        android:text="1000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvTargetRoundsCount"
                        android:textSize="25sp"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimary" android:textAlignment="textStart"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Contribute"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dialogButtonOK"
                        android:elevation="0dp"
                        android:background="@color/colorPrimary"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>